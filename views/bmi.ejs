<% include partials_users/header %>

    <div class="container">
        <div class="section">
          <h2>Hitung BMI</h2>
            <div class="row">
              <form action="/bmi" method="post" class="col s12">
                <div class="row">
                  <div class="input-field col s4">
                    <input class='validate' type='number' name='weight' id='weight' required/>
                    <label for='weight'>Enter your weight</label>
                  </div>
                </div>
                <div class="row">
                  <div class="input-field col s4">
                    <input class='validate' type='number' name='height' id='height' required/>
                    <label for='height'>Enter your height</label>
                  </div>
                </div>

                <button class="btn waves-effect waves-light" type="submit" name="action">Calculate
                  <i class="material-icons right">send</i>
                </button>
              </form>
            </div>
        </div>
    </div>
